<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.iproute.pg.json.mapper.BookMapper">

    <resultMap id="BookResultMap" type="org.iproute.pg.json.entities.Book">
        <id column="id" property="id"/>
        <result column="detail" property="detail" typeHandler="org.iproute.pg.json.entities.Book$DetailTypeHandler"/>
        <result column="authors" property="authors"
                typeHandler="org.iproute.pg.json.entities.Book$ListAuthorTypeHandler"/>

    </resultMap>

    <sql id="BookColumns">
        id, detail, authors
    </sql>

    <select id="limitPage" resultMap="BookResultMap">
        select
        <include refid="BookColumns"/>
        from
        (
        select
        <include refid="BookColumns"/>
        from book limit 100
        ) t
    </select>
</mapper>